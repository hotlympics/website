{
    "name": "hotlympics-website",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:local": "SERVER_ENV=local vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint src --ext ts,tsx --fix",
        "format": "prettier --write .",
        "preview": "vite preview",
        "clean": "npx rimraf dist dist-ssr dev-dist auto-imports.d.ts .vitepress/cache .cache .parcel-cache .next out .nuxt .svelte-kit .docusaurus .serverless .fusebox .dynamodb .firebase .vscode-test .pnp.* .yarn/* !.yarn/patches !.yarn/plugins !.yarn/releases !.yarn/sdks !.yarn/versions vite.config.js.timestamp-* vite.config.ts.timestamp-* *.tsbuildinfo .eslintcache .stylelintcache .node_repl_history *.tgz .yarn-integrity .npm .lock-wscript lib-cov coverage .nyc_output .grunt bower_components web_modules jspm_packages node_modules",
        "prepare": "husky",
        "lint-staged": "lint-staged",
        "deploy": "npm run build && firebase deploy --only hosting",
        "deploy:preview": "npm run build && firebase hosting:channel:deploy preview"
    },
    "dependencies": {
        "@dr.pogodin/react-helmet": "^3.0.2",
        "@tailwindcss/vite": "^4.0.9",
        "browser-image-compression": "^2.0.2",
        "clsx": "^2.1.1",
        "firebase": "^12.0.0",
        "framer-motion": "^12.23.12",
        "lucide-react": "^0.511.0",
        "motion": "^12.23.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router": "^7.1.3",
        "react-router-dom": "^7.1.3",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.329",
        "@types/node": "^22.10.10",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@types/tailwindcss": "^3.1.0",
        "@typescript-eslint/eslint-plugin": "^8.21.0",
        "@typescript-eslint/parser": "^8.21.0",
        "@vitejs/plugin-react-swc": "^3.7.2",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.19.0",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "firebase-tools": "^14.11.2",
        "husky": "^9.1.7",
        "lint-staged": "^16.0.0",
        "postcss": "^8.5.1",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "tailwindcss": "^4.0.9",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.21.0",
        "unplugin-auto-import": "^19.0.0",
        "unplugin-fonts": "^1.3.1",
        "unplugin-imagemin": "^0.6.5",
        "vite": "^6.0.11",
        "vite-plugin-compression2": "^1.3.3",
        "vite-plugin-inspect": "^11.0.1"
    }
}
